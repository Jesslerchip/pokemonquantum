const BELLA = 1
const BELLA_MOM = 2
const BELLA_DAD = 3

script SpringwoodPond_BellasHouse_EventScript_Bella {
    lock
    faceplayer
    if(var(VAR_LITTLEROOT_INTRO_STATE) == 2) {
        msgbox(format("Bella: Oh, hi! Are you {PLAYER}? I've heard a lot about you from Aunt Sakura.\p"
        "My parents and I just moved here to be closer to the Research Institute.\pListen, I'd love to chat,"
        " but I actually wouldn't. Could you leave me alone, now? I was kind of in the middle of something."))
		closemessage
		applymovement(BELLA, Common_Movement_WalkInPlaceFasterUp)
		waitmovement(0)
    }
    else {
        msgbox(format("Bella: This is a placeholder message."))
    }
    release
}

script SpringwoodPond_BellasHouse_EventScript_BellaMom {
    lock
    faceplayer
    if(var(VAR_LITTLEROOT_INTRO_STATE) == 2) {
        msgbox(format("Hi there! You must be {PLAYER}! Your mother has said many good things about you.\p"
        "My husband and I work for Prof. Sakura. We decided it was best to move closer to the Research "
        "Institute so we didn't have to commute from Spectre City."))
		closemessage
		applymovement(BELLA_MOM, Common_Movement_WalkInPlaceFasterUp)
		waitmovement(0)
    }
    else {
        msgbox(format("This is a placeholder message."))
    }
    release
}

script SpringwoodPond_BellasHouse_EventScript_BellaDad {
    lock 
    faceplayer
    if(var(VAR_LITTLEROOT_INTRO_STATE) == 2) {
        msgbox(format("Well, hello there! I'm Bella's father. I'm also a researcher at Prof. Sakura's Research "
        "Institute.\pPlease try to be nice to our Bella. She has a hard time making friends."))
		closemessage
		applymovement(BELLA_DAD, Common_Movement_WalkInPlaceFasterLeft)
		waitmovement(0)
    }
    else {
        msgbox(format("This is a placeholder message."))
    }
    release
}
